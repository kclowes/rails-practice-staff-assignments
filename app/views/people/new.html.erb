<h1>Add a Staff Member</h1>

<%= form_for @person do |f| %>
  <% if @person.errors.any? %>
    <div class="errors">
      <h2>
        <strong>
          <%= "This person could not be created" %>
        </strong>
      </h2>
    </div>
    <% @person.errors.full_messages.each do |msg| %>
      <div class="errors">
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "i.e. Dr." %>
  </div>

  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-row">
    <%= f.submit %>
  </div>

<% end %>