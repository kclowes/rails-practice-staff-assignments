<%= form_for @person do |f| %>
  <% if @person.errors.any? %>
    <% @person.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "i.e. Dr." %>
  </div>

  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-row">
    <%= f.submit %>
  </div>
<% end %>